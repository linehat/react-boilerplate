{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "react boilerplate",
  "main": "index.js",
  "scripts": {
    "local.dev": "NODE_ENV=development webpack-dev-server --config webpack.config.dev.js --progress --hot",
    "local.dll": "webpack --config  webpack.dll.config.js --progress --display-modules --profile",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "test": "test",
    "formatAll": "prettier --write 'src/**/*.js' ",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint $@",
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "react",
    "react-boilerplate"
  ],
  "author": "zack",
  "license": "ISC",
  "dependencies": {
    "react": "^16.4.0",
    "react-hot-loader": "^4.2.0"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "less-loader": "^4.1.0",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4"
  }
}
